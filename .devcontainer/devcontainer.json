{
  // About 200 MB and should have all we need
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  // Allow git push without specifying the remote and branch name
  "postCreateCommand": "git config --global push.autoSetupRemote true",
  "customizations": {
    "vscode": {
      "settings": {
        // Current favourite theme
        "workbench.colorTheme": "Experimental Dark",
        // Disable auto-save, only save on Ctrl+S
        "files.autoSave": "off",
        // Format on save
        "editor.formatOnSave": true,
        // Insert final newline at end of file
        "files.insertFinalNewline": true
      }
    }
  }
}
